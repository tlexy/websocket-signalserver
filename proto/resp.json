//P2P音视频通信， 信令协议设计

//加入房间 请求
{
    "cmd": "join",
    "uid": 12345,
    "roomid": 10098
}

//加入房间 返回
{
    "cmd": "resp-join",
    "uid": 12345,
    "roomid": 10098,
    "remote_uid": 12306 //p2p通话中的对端
}

//离开房间 请求
{
    "cmd": "leave",
    "uid": 12345,
    "roomid": 10098
}

//离开房间 返回
{
    "cmd": "resp-leave",
    "uid": 12345,
    "roomid": 10098
}

//新用户加入房间(new-peer)
{
    "cmd": "new-peer",
    "uid": 12306,
    "roomid": 10098
}

//用户离开房间(peer-leave)
{
    "cmd": "peer-leave",
    "uid": 12306,
    "roomid": 10098
}

//create-offer (传输sdp信息)
{
    "cmd": "sdp-offer",
    "roomid": 10098,
    "uid": 12306,
    "remote_uid": 12345,
    "sdp": "sdp codec info"
}

//create-answer(offer) (传输sdp信息)
{
    "cmd": "sdp-answer",
    "roomid": 10098,
    "uid": 12345,
    "remote_uid": 12306,
    "sdp": "sdp codec info"
}

//交接candidate
{
    "cmd": "candidate",
    "uid": 12345,
    "remote_uid": 12306,
    "roomid": 10098,
    "candidates": "candidate codec info"
}